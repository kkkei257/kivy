                size_hint_x: 1
                size_hint_y: 1
                id: page3
                text: "3"
                font_size: 40
                on_release: root.page(3)
            
        
<PopupWindow>:
	BoxLayout:
        orientation: 'vertical'
        
        TextInput:
            size_hint_y: 0.7
            id: popup_input
            font_size: 30
            hint_text: '文字を入力してください'
            focus: True
    
        BoxLayout:
            size_hint_y: 0.3

            Button:
                size_hint_y: 0.7
                text: 'Delete'
                on_release: root.delete()

            Button:
                size_hint_y: 0.7
                text: 'Regist'
                on_release: root.regist(popup_input.text)